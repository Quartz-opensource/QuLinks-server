{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "tasks": {
    "start": "deno run -A --unstable src/server.ts",
    "start-watch": "deno run -A --watch --unstable src/server.ts"
  },
  "lint": {
    "files": {
      "include": [
        "./src/",
        "./types/",
        "./config.ts",
        "./deno.jsonc"
      ]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "./src/",
        "./types/",
        "./config.ts",
        "./deno.jsonc"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}
